# Set the default behavior, in case people don't have core.autocrlf set.
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout.
*.c text eol=lf
*.h text eol=lf
*.cpp text eol=lf
*.hpp text eol=lf
*.s text eol=lf
*.S text eol=lf
*.ld text eol=lf
*.cmake text eol=lf
*.txt text eol=lf
*.md text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.py text eol=lf
*.sh text eol=lf
*.csv text eol=lf
CMakeLists.txt text eol=lf
sdkconfig* text eol=lf
Makefile text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Declare files that will always be found in the index on Windows but
# should be treated as binary.
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.ttf binary
